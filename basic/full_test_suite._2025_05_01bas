10  REM =============================
15  REM Test DEF FN and math functions
20  DEF FNPI() = 3.14159
30  LET A = FNPI() * 2
40  PRINT "2*PI ="; A

50  REM Test LET, PRINT, arithmetic, strings
60  LET B = 5
70  LET C = 3.14
80  LET S$ = "Hello"
90  PRINT "B*C ="; B*C
100 PRINT S$;" WORLD"

110 REM String functions
120 LET T$ = "CHATGPT"
130 PRINT "LEN$(T$) =" ; LEN$(T$)
140 PRINT "LEFT$(T$,1) =" ; LEFT$(T$,1)
150 PRINT "MID$(T$,2,3) =" ; MID$(T$,2,3)
160 PRINT "RIGHT$(T$,2) =" ; RIGHT$(T$,2)

170 REM ASCII and CHR$
180 LET X = ASCII("A")
190 PRINT "ASCII A =" ; X
200 LET Y$ = CHR$(65)
210 PRINT "CHR$(65) =" ; Y$

220 REM Random numbers
230 SEED 123
240 LET R1 = RND
250 LET R2 = RND
260 PRINT "RND's:"; R1; R2

270 REM IF THEN
280 IF A>6 THEN PRINT "A>6"
290 IF A<=6 THEN PRINT "A<=6"

300 REM GOTO
310 GOTO 330
320 PRINT "This line should be skipped"
330 PRINT "GOTO OK"

340 REM ON ... GOTO
350 LET N = 2
360 ON N GOTO 390,400,410
370 PRINT "ON GOTO skipped"
380 GOTO 420
390 PRINT "Choice 1"
395 GOTO 420
400 PRINT "Choice 2"
405 GOTO 420
410 PRINT "Choice 3"
420 PRINT "After ON GOTO"

430 REM FOR / NEXT
440 FOR I = 1 TO 3 STEP 1
450   PRINT "FOR:"; I
460 NEXT I

470 REM WHILE / WEND
480 LET K = 1
490 WHILE K<=3
500   PRINT "WHILE:"; K
510   LET K = K + 1
520 WEND

530 REM REPEAT / UNTIL
540 LET M = 1
550 REPEAT
560   PRINT "REPEAT:"; M
570   LET M = M + 1
580 UNTIL M>3

590 REM DIM, DATA, READ, RESTORE
600 DIM ARR(3)
610 DATA 10,20,30
620 RESTORE
630 READ ARR(1),ARR(2),ARR(3)
640 FOR I = 1 TO 3
650   PRINT "ARR(";I;") ="; ARR(I)
660 NEXT I

670 REM GOSUB / RETURN
680 GOSUB 760
690 PRINT "Back from sub"
700 GOTO 720
710 REM (unreachable)
720 PRINT "After sub"
730 GOTO 780

760 PRINT "In SUB..."
770 RETURN

780 REM MAT operations and DET
790 DIM MAT1(2,2)
800 MAT READ MAT1
810 DATA 1,2,3,4
820 MAT MAT2 = TRANS(MAT1)
830 MAT MAT3 = MAT1 + MAT2
840 MAT PRINT MAT3
850 PRINT "DET(MAT1) ="; DET(MAT1)

860 REM File I/O
870 OPEN "test.txt" FOR OUTPUT AS #1
880 PRINT #1, "FileLine1"
890 PRINT #1, 123, "Data"
900 CLOSE #1

910 OPEN "test.txt" FOR INPUT AS #2
920 INPUT #2, L1$, L2, L3$
930 PRINT "Read from file:"; L1$; L2; L3$
940 CLOSE #2

950 REM PRINT USING
960 LET B = 1.2345
970 970 := "000.00"
980 PRINT USING 970, B

990 REM INPUT
1000 INPUT "Enter a number"; Z
1010 PRINT "You entered:"; Z

1020 REM STOP
1030 STOP
1040 PRINT "This will not execute"

1050 END
